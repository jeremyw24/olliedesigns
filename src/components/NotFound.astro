---
import Container from "@/components/primitives/Container.astro";
import Link from "@/components/primitives/Link.astro";
import Title from "@/components/primitives/Title.astro";
---

<Container tag="section" class="pt-52 pb-40 md:pb-48 md:pt-64">
	<div class="mx-auto text-center flex flex-col max-w-xl gap-12">
		<div class="flex flex-col gap-4">
			<Title level={4} tag={2}>404</Title>
			<Title level={3} tag={1}
				>Whoops! Something went wrong.</Title
			>
		</div>
		<div class="flex flex-col gap-2">
			<p class="text-gray-500 dark:text-gray-400">
				Try visiting one of the links below or return to the homepage:
			</p>
			<ul
				class="flex flex-wrap justify-center items-center gap-x-4 text-gray-500 dark:text-gray-400"
			>
				<li>
					<Link href="/">Home</Link>
				</li>
				<li>
					<Link href="/about">About</Link>
				</li>
				<li>
					<Link href="/contact">Contact</Link>
				</li>
			</ul>
		</div>
	</div>
</Container>
